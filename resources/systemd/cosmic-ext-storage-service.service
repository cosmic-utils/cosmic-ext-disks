[Unit]
Description=COSMIC Ext Storage Management Service
Documentation=https://github.com/cosmic-utils/cosmic-ext-storage
Requires=dbus.service
After=dbus.service

[Service]
Type=dbus
BusName=org.cosmic.ext.Storage.Service
ExecStart=/usr/bin/cosmic-ext-storage-service
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/dev /sys /run/udev

# Resource limits
MemoryMax=256M
TasksMax=50

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=cosmic-ext-storage-service

[Install]
WantedBy=multi-user.target
Also=cosmic-ext-storage-service.socket
